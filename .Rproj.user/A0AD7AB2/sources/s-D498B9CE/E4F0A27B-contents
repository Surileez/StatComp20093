% Generated by roxygen2: do not edit by hand
% Please edit documentation in R/Myfunctions.R
\name{simGBM}
\alias{simGBM}
\title{Geometric Brownian Motion sample}
\usage{
simGBM(SO, mu, sigma, T, numSteps, numRep1)
}
\arguments{
\item{SO}{initial number (numeric)}

\item{mu}{drift(numeric vector)}

\item{sigma}{volatility(numeric vector)}

\item{T}{time interval(numeric)}

\item{numSteps}{length of the chain(numeric)}

\item{numRep1}{number of the chain(numeric)}
}
\value{
a Geometric Brownian Motion sample
}
\description{
Use Geometric Brownian Motion to simulate fructuation of stocks using R.
}
\examples{
\dontrun{
SO <- 50
mu <- 0.1
sigma <- 0.3
T <- 1
numSteps <- 1000
numRep1 <- 10
path = matrix(nrow=numRep1,ncol=numSteps+1)
path <- simGBM(SO,mu,sigma,T,numSteps,numRep1 )
for(i in 1:numRep1) {
if (i == 1)
plot(0:numSteps, path[i,], col = i, type='l', ylim = c(0,100))
else
lines(0:numSteps,path[i,], col = i)
}  
}
}
